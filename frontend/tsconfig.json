{
  "compilerOptions": {
    "outDir": "./dist",         // Diretório de saída para os arquivos compilados
    "rootDir": "./src",         // Diretório de entrada (fonte) dos arquivos TypeScript
    "target": "ES2020",
    "lib": ["esnext"],          // Removido "dom" e "dom.iterable", já que são usados em front-end
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"],    // Incluir todos os arquivos TypeScript dentro do diretório src
  "exclude": ["node_modules"]    // Excluir o diretório node_modules
}
